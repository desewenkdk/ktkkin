<?xml version='1.0' encoding='utf-8'?>
<widget id="io.cordova.hellocordova" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>HelloCordova</name>
    <description>
        A sample Apache Cordova application that responds to the deviceready event.
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <preference name="Fullscreen" value="true" />
    <preference name="orientation" value="portrait" />
    <preference name="AutoHideSplashScreen" value="true" />
    <preference name="SplashScreenDelay" value="5000" />
     <preference name="FadeSplashScreenDuration" value="1500"/>
    <preference name="SplashMaintainAspectRatio" value="false" />
    <platform name="android">
        <allow-intent href="market:*" />
        <splash density="land-hdpi" src="platforms/android/res/drawable-land-hdpi/fff.png" />
        <splash density="land-ldpi" src="platforms/android/res/drawable-land-ldpi/fff.png" />
        <splash density="land-mdpi" src="platforms/android/res/drawable-land-mdpi/fff.png" />
        <splash density="land-xhdpi" src="platforms/android/res/drawable-land-xhdpi/fff.png" />
        <splash density="port-hdpi" src="platforms/android/res/drawable-port-hdpi/fff.png" />
        <splash density="port-ldpi" src="platforms/android/res/drawable-port-ldpi/fff.png" />
        <splash density="port-mdpi" src="platforms/android/res/drawable-port-mdpi/fff.png" />
        <splash density="port-xhdpi" src="platforms/android/res/drawable-port-xhdpi/fff.png" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>

</widget>
